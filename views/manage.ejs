
<%- include('partials/header.ejs'); %>

<main class="container">
	<div class="py-5 text-center">
		<h2>Dev League Management</h2>
		<p class="lead">Below is an example form built entirely with Bootstrap's form controls. Each required form group has a validation state that can be triggered by attempting to submit the form without completing it.</p>
	</div>

	<div class="row">
		<div class="col-md-4 order-md-2 mb-4">
			<h4 class="d-flex justify-content-between align-items-center mb-3">
				<span class="text-muted">Active Leagues</span>
				<span class="badge badge-secondary badge-pill">3</span>
			</h4>
			<ul class="list-group mb-3">
				<li class="list-group-item d-flex justify-content-between lh-condensed">
					<div>
						<h6 class="my-0">Product name</h6>
						<small class="text-muted">Brief description</small>
					</div>
					<span class="text-muted">$12</span>
				</li>
				<li class="list-group-item d-flex justify-content-between lh-condensed">
				<div>
				<h6 class="my-0">Second product</h6>
				<small class="text-muted">Brief description</small>
				</div>
				<span class="text-muted">$8</span>
				</li>
				<li class="list-group-item d-flex justify-content-between lh-condensed">
				<div>
				<h6 class="my-0">Third item</h6>
				<small class="text-muted">Brief description</small>
				</div>
				<span class="text-muted">$5</span>
				</li>
				<li class="list-group-item d-flex justify-content-between bg-light">
				<div class="text-success">
				<h6 class="my-0">Promo code</h6>
				<small>EXAMPLECODE</small>
				</div>
				<span class="text-success">-$5</span>
				</li>
				<li class="list-group-item d-flex justify-content-between">
				<span>Total (USD)</span>
				<strong>$20</strong>
				</li>
			</ul>

			<form class="card p-2">
			<div class="input-group">
			<input type="text" class="form-control" placeholder="Promo code">
			<div class="input-group-append">
			<button type="submit" class="btn btn-secondary">Redeem</button>
			</div>
			</div>
			</form>
		</div>

		<div class="col-md-8 order-md-1">
			<h4 class="mb-3">League Settings</h4>
			
			<form class="needs-validation" novalidate>

			<div class="mb-3">
				<label for="username">Contract Sheet</label>
				<div class="input-group">
					<input type="text" class="form-control" id="contract_url" placeholder="contract_url" required>
					<div class="invalid-feedback" style="width: 100%;">
						Your username is required.
					</div>
				</div>
			</div>

			<hr class="mb-4">
			
			<div class="custom-control custom-checkbox">
				<input type="checkbox" class="custom-control-input" id="premier">
				<label class="custom-control-label" for="master">Premier</label>
			</div>
			<div class="custom-control custom-checkbox">
				<input type="checkbox" class="custom-control-input" id="master">
				<label class="custom-control-label" for="master">Master</label>
			</div>
		
			<hr class="mb-4">
			
			<button class="btn btn-primary btn-lg btn-block" type="submit">Continue to checkout</button>
			
			</form>
		</div>
		
	</div>

</main>

<%- include('partials/footer.ejs'); %>